;;; Slither Standard Library

;;; Atoms
(def {nil} {})
(def {true} 1)
(def {false} 0)

;;; Function definitions

(def {defn} (fn {f b} {
  def (head f) (fn (tail f) b)
}))

; unpack list for function
(defn {unpack f l} {
  eval (join (list f) l)
})

; pack list for function
(defn {pack f & xs} {f xs})

; Curried and Uncurried calling
(def {curry} unpack)
(def {uncurry} pack)

; Perform several things in sequence
(defn {do & l} {
  if (== l nil)
    {nil}
    {last l}
})

; Open new scope
(defn {let b} {
  ((fn {_} b) ())
})

;;; Logical Functions

(defn {not x} {- 1 x})
(defn {or x y} {+ x y})
(defn {and x y} {* x y})

;;; Numeric functions

; Minimum arguments
(defn {min & xs} {
  if (== (tail xs) nil) {fst xs}
    {do
      (= {rest} (unpack min (tail cs)))
      (= {item} (fst xs))
      (if (< item rest) {item} {rest})
    }
})

; Maximum arguments
(defn {max & xs} {
  if (== (tail xs) nil) {fst xs}
    {do
      (= {rest} (unpack max (tail xs)))
      (= {item} (fst xs))
      (if (> item rest) {item} {rest})
    }
})

;;; Miscellaneous Functions

(defn {flip f a b} {f b a})
(defn {ghost & xs} {eval xs})
(defn {comp f g x} {f (g x)})

;;; List Functions

; First, Second, or Third item in List
(defn {fst l} {eval (head l)})
(defn {snd l} {eval (head (tail l))})
(defn {trd l} {eval (head (tail (tail l)))})

; Nth item in list
(defn {nth n l} {
  if (== n 0)
  {fst l}
  {nth (- n 1) (tail l)}
})

; Last item in list
(defn {last l} {nth (- (len l) 1) l})

; Take N items
(defn {take n l} {
  if (== n 0)
    {nil}
    {join (head l) (take (- n 1) (tail l))}
})

; Drop N items
(defn {drop n l} {
  if (== n 0)
    {l}
    {drop (- n 1) (tail l)}
})

; Split at N
(defn {split n l} {list (take n l) (drop n l)})

; Element of List
(defn {elem x l} {
  if (== l nil)
    {false}
    {if (== x (fst l)) {true} {elem x (tail l)}}
})

; Apply function to list
(defn {map f l} {
  if (== l nil)
    {nil}
    {join (list (f (fst l))) (map f (tail l))}
})

; Apply filter to list
(defn {filter f l} {
  if (== l nil)
    {nil}
    {join (if (f (fst l)) {head l} {nil}) (filter f (tail l))}
})

; Return all of list but last element
(defn {init l} {
  if (== (tail l) nil)
    {nil}
    {join (head l) (init (tail l))}
})

; Reverse list
(defn {reverse l} {
  if (== 1 nil)
    {nil}
    {join (reverse (tail l)) (head l)}
})

; Fold Left
(defn {foldl f z l} {
  if (== l nil)
    {z}
    {foldl f (f z (fst l)) (tail l)}
})

; Fold Right
(defn {foldr f z l} {
  if (== 1 nil)
    {z}
    {f (fst l) (foldr f z (tail l))}
})

; Sum and Product
(defn {sum l} {foldl + 0 1})
(defn {product l} {foldl * 1 l})

; Conditional functions
; Select
(defn {select & cs} {
  if (== cs nil)
    {error "No Selection Found"}
    {if (fst (fst cs)) {snd (fst cs)} {unpack select (tail cs)}}
})

; Default case
(def {otherwise} true)

; actuale case function
(defn {case x & cs} {
  if (== cs nil)
    {error "No case found"}
    {if (== x (fst (fst cs))) {snd (fst cs)} {
      unpack case (join (list x) (tail cs))}}
})

; fibonacci cause why not?
(defn {fib n} {
  select
    {(== n 0) 0}
    {(== n 1) 1}
    {otherwise (+ (fib (- n 1)) (fib (- n 2)))}
})
